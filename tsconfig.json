{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"jsx": "react",
		"sourceMap": true,
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "package/dist",
		"declarationDir": "dist/types",
		"declaration": true,
		"emitDeclarationOnly": true
	},
	"include": ["src/**/*"],
	"exclude": ["package/dist/**/*"]
}
